{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "allowJs": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "downlevelIteration": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/crypto/modules/WebCryptoModule/**/*",
    "src/crypto/modules/web.ts",
    "src/file/modules/react-native.ts",
    "src/file/modules/web.ts",
    "src/titanium/**/*",
    "src/nativescript/**/*",
    "src/react_native/**/*",
    "src/transport/service-worker/**/*",
    "src/transport/titanium-transport.ts",
    "src/transport/web-react-native-transport.ts",
    "src/web/**/*"
  ]
}